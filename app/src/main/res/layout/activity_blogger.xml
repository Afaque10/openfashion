<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".blogger">

    <LinearLayout

        android:padding="5dp"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginHorizontal="5dp"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@drawable/menu_icon"
            >

        </ImageView>
        <ImageView
            android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fashionopen"
            >

        </ImageView>
        <ImageView
            android:layout_marginStart="70dp"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@drawable/search"
            >

        </ImageView>
        <ImageView
            android:layout_marginHorizontal="10dp"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@drawable/shoppingbag"
            >

        </ImageView>
    </LinearLayout>
    <ImageView
        android:layout_below="@id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/blog"
        android:id="@+id/blog"
        >

    </ImageView>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/blog"
        android:id="@+id/button">
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Fashion"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="55dp"
            android:layout_height="25dp"

            android:background="@drawable/curl"
            >
        </TextView>
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Promo"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="55dp"
            android:layout_height="25dp"

            android:background="@drawable/curl"
            >
        </TextView>
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Policy"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="55dp"
            android:layout_height="25dp"

            android:background="@drawable/curl"
            >
        </TextView>
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="LookBook"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="25dp"

            android:background="@drawable/curl"
            >
        </TextView>
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Fashion"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="55dp"
            android:layout_height="25dp"

            android:background="@drawable/curl"
            >
        </TextView>

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"

                >
                <LinearLayout
                    android:scrollbars="vertical"
                    android:padding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/styleguide"
                            >

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:padding="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2021 Style Guide:\nThe Biggest Fall \nTrends"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"

                            >

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The excitement of fall fashion \nis here and I’m already loving \nsome of the trend forecasts "
                            android:textSize="16dp"


                            >

                        </TextView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView

                        app:cardCornerRadius="4dp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        >

                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"

                >
                <LinearLayout
                    android:scrollbars="vertical"
                    android:padding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pairs"
                            >

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:padding="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Pairs of Denim You Won’t Believe"
                            android:textSize="16dp"

                            android:textColor="@color/black"

                            >

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The excitement of fall fashion is here and I’m already loving some of the trend forecasts "
                            android:textSize="16dp"


                            >

                        </TextView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView

                        app:cardCornerRadius="4dp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        >

                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"

                >
                <LinearLayout
                    android:scrollbars="vertical"
                    android:padding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/yellowdress"
                            >

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:padding="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Fall Looks I’m Loving"
                            android:textSize="16dp"

                            android:textColor="@color/black"

                            >

                        </TextView>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The excitement of fall fashion is here and I’m already loving some of the trend forecasts "

                            android:textSize="16dp"

                            >

                        </TextView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView

                        app:cardCornerRadius="4dp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        >

                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"

                >
                <LinearLayout
                    android:scrollbars="vertical"
                    android:padding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/doubledress"
                            >

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:padding="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Fall Boot Trends You Need to Try"
                            android:textSize="16dp"

                            android:textColor="@color/black"

                            >

                        </TextView>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The excitement of fall fashion \nis here and I’m already loving \nsome of the trend forecasts "

                            android:textSize="16dp"

                            >

                        </TextView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView

                        app:cardCornerRadius="4dp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        >

                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"

                >
                <LinearLayout
                    android:scrollbars="vertical"
                    android:padding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/blackdress"
                            >

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:padding="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2021 Style Guide:
The Biggest Fall Trends"
                            android:textSize="16dp"
                            android:textStyle="bold"

                            android:textColor="@color/black"

                            >

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The excitement of fall fashion \nis here and I’m already loving \nsome of the trend forecasts "

                            android:textSize="16dp"


                            >

                        </TextView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView

                        app:cardCornerRadius="4dp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        >

                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/lastcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"

                >
                <LinearLayout
                    android:scrollbars="vertical"
                    android:padding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/jacket"
                            >

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:padding="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Pairs of Denim You Won’t Believe"
                            android:textSize="16dp"

                            android:textColor="@color/black"

                            >

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The excitement of fall fashion \nis here and I’m already loving \nsome of the trend forecasts "

                            android:textSize="16dp"
                            android:textStyle="bold"


                            >

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/learnmorebutton"
                >

            </ImageButton>
        </LinearLayout>

    </ScrollView>




















</RelativeLayout>